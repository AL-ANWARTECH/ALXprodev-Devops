#!/bin/bash

# Create the pokemon_data directory if it doesn't exist
mkdir -p pokemon_data

# Array of Pokémon to fetch
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Log file for errors
error_log="pokemon_data/error.log"
> "$error_log"  # clear old errors

# Loop through each Pokémon
for pokemon in "${pokemon_list[@]}"; do
    echo "Fetching data for $pokemon..."

    success=false
    for attempt in {1..3}; do
        # Fetch Pokémon data
        curl -s "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "pokemon_data/$pokemon.json"

        # Check if the file contains valid JSON (non-empty and has "name")
        if jq -e '.name' "pokemon_data/$pokemon.json" >/dev/null 2>&1; then
            echo "Saved data to pokemon_data/$pokemon.json ✅"
            success=true
            break
        else
            echo "Attempt $attempt failed for $pokemon. Retrying..."
            sleep 2
        fi
    done

    if [ "$success" = false ]; then
        echo "❌ Failed to fetch data for $pokemon after 3 attempts" | tee -a "$error_log"
        rm -f "pokemon_data/$pokemon.json"  # remove bad file
    fi

    # Sleep to avoid rate limiting
    sleep 1
done

echo "Processing complete."
if [ -s "$error_log" ]; then
    echo "Some errors were logged in $error_log"
fi
